<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="match_parent"
        android:layout_height="412dp" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/textView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Welcome to MyMonashMate! Please Fill in the Details Below."
                android:textAppearance="?android:attr/textAppearanceLarge" />

            <EditText
                android:id="@+id/txtResFirstName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="First Name"
                android:inputType="textPersonName" />

            <EditText
                android:id="@+id/txtResLastName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Last Name"
                android:inputType="textPersonName" >

                <requestFocus />
            </EditText>

            <EditText
                android:id="@+id/txtResNickname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="NickName"
                android:ems="10" />

            <EditText
                android:id="@+id/txtResEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Email address (login)"
                android:inputType="textEmailAddress" />

            <EditText
                android:id="@+id/txtResPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Password" />

            <RadioGroup
                android:id="@+id/radioGroup1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <RadioButton
                    android:id="@+id/radResMale"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="true"
                    android:text="Male" />

                <RadioButton
                    android:id="@+id/radResFemale"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Female" />
            </RadioGroup>

            <AutoCompleteTextView
                android:id="@+id/txtaResNationality"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Nationality"
                android:text="" />

            <AutoCompleteTextView
                android:id="@+id/txtaResCourse"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Course"
                android:text="" />

            <AutoCompleteTextView
                android:id="@+id/txtaResFirstLanguage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="First Language"
                android:text="" />

            <AutoCompleteTextView
                android:id="@+id/txtaResSecondLanguage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Second Language"
                android:text="" />


            <EditText
                android:id="@+id/txtResBirthday"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Birthday dd/mm/yyyy"
                android:inputType="date" />

 
            <EditText
                android:id="@+id/txtResJob"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Your Job"
                android:ems="10" />
            
            <EditText
                android:id="@+id/txtResProgramming"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="java,php,..."
                android:ems="10"
                android:inputType="text" />

            <EditText
                android:id="@+id/txtResFood"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Interested Food"
                android:ems="10" />

            <EditText
                android:id="@+id/txtResMovie"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Interested Movie"
                android:ems="10" />

        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <Button
            android:id="@+id/cmdResSubmit"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.79"
            android:text="Submit" />

        <Button
            android:id="@+id/cmdResReturn"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.20"
            android:text="Return" />

    </LinearLayout>

</LinearLayout>